@model List<ProductListModel>

@{
	Layout = "_Layout";
}

@{
	if (Model?.Count > 0)
	{
		<div class="text-end">
			<a asp-action="Create" asp-asp-controller="Product">Yeni Kayıt Oluştur</a>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Price</th>
					<th>Stock</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var product in Model)
				{
					<tr>
						<td>
							@product.Id
						</td>
						<td>
							@product.Name
						</td>
						<td>
							@product.Price
						</td>
						<td>
							@product.Stock
						</td>
						<td>
							<a asp-action="Update" asp-asp-controller="Product" asp-route-id="@product.Id" class="btn btn-warning btn-sm">Güncelle</a>
							<a asp-action="Remove" asp-asp-controller="Product" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Sil</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<div class="text-center">
			Herhangi bir kayıt bulunamadı
		</div>
	}

}
